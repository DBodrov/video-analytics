{
  "info": {
    "version": "0.0.1", 
    "title": "auth", 
    "description": "powered by Flasgger", 
    "termsOfService": "/tos"
  }, 
  "paths": {
    "/api/auth/check-token": {
      "get": {
        "summary": "# Проверка токена доступа", 
        "description": "# ", 
        "responses": {
          "200": {
            "description": "Запрос содержит действующий токен доступа", 
            "schema": {
              "$ref": "#/definitions/check-token_response_200"
            }
          }, 
          "400": {
            "description": "Отсутсвует токен доступа или истек срок его действия", 
            "schema": {
              "$ref": "#/definitions/check-token_error"
            }
          }
        }, 
        "parameters": [
          {
            "name": "Authorization", 
            "in": "header", 
            "type": "string", 
            "required": true, 
            "description": "Действующий токен доступа в формате \"Bearer {token}\""
          }
        ], 
        "tags": [
          "Auth"
        ], 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/api/auth/heartbeat": {
      "get": {
        "summary": "# Доступность сервиса", 
        "description": "# ", 
        "responses": {
          "200": {
            "description": "Сервис доступен", 
            "schema": {
              "$ref": "#/definitions/heartbeat_get_response_200"
            }
          }
        }, 
        "tags": [
          "Core"
        ], 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/api/auth/companies": {
      "get": {
        "summary": "# Сведения о компаниях", 
        "description": "# ", 
        "responses": {
          "200": {
            "description": "Сведения о компаниях", 
            "schema": {
              "$ref": "#/definitions/companies_get_response_200"
            }
          }
        }, 
        "tags": [
          "Company"
        ], 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/api/auth/login": {
      "post": {
        "summary": "# Идентификация пользователя", 
        "description": "# ", 
        "responses": {
          "201": {
            "description": "Access/refresh-токены с указанием периода действия", 
            "schema": {
              "$ref": "#/definitions/login_post_response_201"
            }
          }, 
          "400": {
            "description": "Ошибка пр разборе параметров запроса", 
            "schema": {
              "$ref": "#/definitions/login_post_error"
            }
          }, 
          "401": {
            "description": "Некорректный пароль и/или имя пользователя", 
            "schema": {
              "$ref": "#/definitions/login_post_error"
            }
          }, 
          "403": {
            "description": "Пользователь не найден. Недостаточно прав для проведения авторизации", 
            "schema": {
              "$ref": "#/definitions/login_post_error"
            }
          }
        }, 
        "parameters": [
          {
            "name": "request", 
            "in": "body", 
            "required": true, 
            "description": "Авторизационные данные пользователя", 
            "schema": {
              "$ref": "#/definitions/login_post_request"
            }
          }
        ], 
        "tags": [
          "Auth"
        ], 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/api/auth/token": {
      "post": {
        "summary": "# Обновление токена доступа", 
        "description": "# ", 
        "responses": {
          "201": {
            "description": "Действующий токен доступа", 
            "schema": {
              "$ref": "#/definitions/token_post_response_201"
            }
          }, 
          "400": {
            "description": "Запрос содержит некорректный токен доступа (refresh-токен)", 
            "schema": {
              "$ref": "#/definitions/token_post_error"
            }
          }
        }, 
        "parameters": [
          {
            "name": "Authorization", 
            "in": "header", 
            "type": "string", 
            "required": true, 
            "description": "Действующий токен доступа (refresh) в формате \"Bearer {token}\""
          }
        ], 
        "tags": [
          "Auth"
        ], 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/api/auth/about": {
      "get": {
        "summary": "# Сведения о сервисе и API", 
        "description": "# ", 
        "responses": {
          "200": {
            "description": "Сведения о сервисе и API", 
