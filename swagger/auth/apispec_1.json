        "parameters": [
          {
            "name": "company_id", 
            "in": "path", 
            "type": "integer", 
            "required": true, 
            "description": "Идентификатор компании"
          }
        ], 
        "tags": [
          "Company"
        ], 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ]
      }
    }
  }, 
  "definitions": {
