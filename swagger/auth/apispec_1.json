            "description": "Краткое название"
          }, 
          "full_name": {
            "type": "string", 
            "description": "Полное название"
          }, 
          "database": {
            "type": "object", 
            "required": [
              "hostname", 
              "port", 
              "name", 
              "user"
            ], 
            "properties": {
              "hostname": {
                "type": "string", 
                "description": "Название сервера для хранения видеоаналитики"
              }, 
              "port": {
                "type": "integer", 
                "description": "Порт для подключения к серверу"
              }, 
              "name": {
                "type": "string", 
                "description": "Название базы данных"
              }, 
              "user": {
                "type": "string", 
                "description": "Учетная запись для подключения"
              }
            }
          }
        }
      }
    }, 
    "login_post_error": {
      "type": "object", 
      "required": [
