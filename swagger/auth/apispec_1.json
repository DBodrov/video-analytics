        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/api/auth/companies/{company_id}": {
      "get": {
        "summary": "# Сведения о компании", 
        "description": "# ", 
        "responses": {
          "200": {
            "description": "Сведения о компании", 
            "schema": {
              "$ref": "#/definitions/company_get_response_200"
