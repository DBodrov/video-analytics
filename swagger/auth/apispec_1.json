          "description": "Сообщение об ошибке"
        }, 
        "path": {
          "type": "string", 
          "description": "Путь к запрашиваемому ресурсу"
        }, 
        "status_code": {
          "description": "HTTP-код ответа", 
          "type": "integer"
        }
      }
    }, 
