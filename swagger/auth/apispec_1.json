              "description": "Адрес электронной почты"
            }, 
            "company_id": {
              "type": "integer", 
              "description": "Идентификатор компании"
            }
          }
        }, 
        "access_token": {
          "type": "object", 
          "description": "Access-токен", 
          "$ref": "#/definitions/login_post_token"
        }, 
        "refresh_token": {
          "type": "object", 
          "description": "Refresh-токен", 
          "$ref": "#/definitions/login_post_token"
        }
      }
    }, 
    "token_post_error": {
      "type": "object", 
      "required": [
